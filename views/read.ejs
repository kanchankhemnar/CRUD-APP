<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="stylesheet" href="/sytlesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="min-w-full min-h-full bg-zinc-900 p-10 text-white">
    <a class="text-blue-500 mb-5" href="/">Home</a>
    <h1 class="text-3xl pb-4">ALL Users</h1>
    <div class="users flex flex-wrap gap-4">
      <% if (users.length ==0){%>
        <h1 class="text-zinc-400">No users yet !</h1>

     <% }else{ %>
        <% users.forEach(function(user){ %>

       
      <div class="user w-60 p-4 bg-zinc-800 rounded-lg">
        <div class="w-full h-52 bg-zinc-500 rounded-lg content-fit" >
          <img class="w-full h-full" src="<%= user.url %>" alt="">
        </div>
        <h3 class="text-xl mt-3  "><%= user.name %> </h3>
        <h5 class="text-zinc-500"><%= user.email %></h5>
        <div class="flex gap-3 mt-5">
          <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
          <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>

        </div>
      </div>

<%   }); }%>

  

   
      </div>
    </div>
      </div>
  </form>
</body>
</html>